<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141414"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="230sp"
            android:layout_marginRight="20sp"
            android:fontFamily="cursive"
            android:text="Добро пожаловать в Art.Gallery!"
            android:textAlignment="viewStart"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            android:ellipsize="end"
            android:fontFamily="cursive"
            android:text="Откройте для себя мир искусства, где собраны шедевры от известных художников со всего мира. Погрузитесь в уникальные произведения, которые вдохновят и порадуют ваш взор. Наслаждайтесь просмотром, изучайте истории и делитесь своими впечатлениями с другими ценителями искусства.  "
            android:textAlignment="textStart"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            android:fontFamily="cursive"
            android:text="Счастливого путешествия по галерее!"
            android:textAlignment="viewStart"
            android:textColor="@color/white" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="122dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100sp"
            android:layout_marginRight="100sp"
            android:backgroundTint="#FFFDFD"
            android:fontFamily="cursive"
            android:text="Next"
            android:textColor="#141414"
            android:textColorLink="#EF0505"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>